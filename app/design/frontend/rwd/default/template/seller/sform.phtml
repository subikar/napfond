}
function get_faq()
{
	if(document.getElementById("seller_faq").style.display == 'none')
	{
		document.getElementById("seller_faq").style.display = 'block';
		document.getElementById("seller_form").style.display = 'none';
	}
}
var counter = 1;
function addInput(divName)
{
  var newdiv = document.createElement('div');
  newdiv.setAttribute('id', 'input_'+(counter+1));	
  newdiv.innerHTML = "<br><label class='sel-li-label'></label><input type='text' class='input-text sform_link' name='sform_link[]' placeholder='Link"+ (counter+1)+"' id='link_"+(counter+1)+"'> <span id='error_"+(counter+1)+"' class='error_class'></span>";
  document.getElementById(divName).appendChild(newdiv);
  counter++;
}

function delInput(divName)	
{
  if(counter > 1)
  {		 
    document.getElementById('input_'+counter).remove();
    counter--;
  }
}
function checkAddress(element) {

    var myLayer = document.getElementById('submit');
    if (element.checked == true) {
        myLayer.className = "button";
        myLayer.disabled = "";
    } else {
        myLayer.className = "button";
        myLayer.disabled = "disabled";
    };
}
