<?xml version="1.0"?>
<config>
	<tabs>
	  <NextBits_Extensions translate="label" module="checkdelivery">
	   <label>NextBits - Extensions</label>
	   <sort_order>100</sort_order>
	  </NextBits_Extensions>
    </tabs>
   <sections>
       <checkdelivery>
            <label>Check Delivery</label>
            <tab>NextBits_Extensions</tab>
            <class>nextbits-checkdelivery</class>
            <frontend_type>text</frontend_type>
            <sort_order>150</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
			<groups>
				<general translate="label" module="checkdelivery">
					<label>General</label>
					<frontend_type>text</frontend_type>
					<sort_order>0</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<active translate="label">
							<label>Enable Module</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</active>
						<pincode translate="label">
							<label>Available ZIP Code</label>
							<frontend_type>textarea</frontend_type>
							<comment>Format: 395006,395008,...</comment>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</pincode>
						<block_title translate="label">
							<label>Block Title</label>
							<frontend_type>text</frontend_type>
							<comment>Default: Check Delivery Availability</comment>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</block_title>
						<success_messgae translate="label">
							<label>Succeess Message</label>
							<frontend_type>text</frontend_type>
							<comment>Default: Delivery possible in your area</comment>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</success_messgae>
						<failure_messgae translate="label">
							<label>Failure Message</label>
							<frontend_type>text</frontend_type>
							<comment>Default: We do not deliver to this location. </comment>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</failure_messgae>
						<empty_messgae translate="label">
							<label>Empty Message</label>
							<frontend_type>text</frontend_type>
							<comment>Default: Please enter Zip Code </comment>
							<sort_order>6</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</empty_messgae>
						<default_html translate="label">
							<label>Default HTML</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>7</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</default_html>
						<success_html translate="label">
							<label>Success HTML</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>8</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</success_html>
						<failure_html translate="label">
							<label>Failure HTML</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>9</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</failure_html>
					</fields>
				</general>
			</groups>
		</checkdelivery>
    </sections>
</config>