<?php $_shipment = $this->getShipment() ?>
<?php $_order    = $this->getOrder() ?>
<?php if ($_shipment && $_order): ?>
<table width="100%" border="1" cellspacing="0" cellpadding="0">
    <thead>
        <tr>
            <td bgcolor="#DD0003" align="center"><div style="font-weight:bold; padding:5px; font-size:16px; color:#fff"><?php echo $this->__('Item') ?></td>
            <td bgcolor="#DD0003" align="center"><div style="font-weight:bold; padding:5px; font-size:16px; color:#fff"><?php echo $this->__('Sku') ?></td>
            <td bgcolor="#DD0003" align="center" width="150"><div style="font-weight:bold; padding:5px; font-size:16px; color:#fff">
                <?php echo $this->__('Qty') ?>
            </td>
        </tr>
    </thead>

    <?php $i=0; foreach ($_shipment->getAllItems() as $_item): ?>
    <?php if($_item->getOrderItem()->getParentItem()) continue; else $i++; ?>
    <tbody<?php echo $i%2 ? ' bgcolor="#F6F6F6"' : '' ?>>
        <?php echo $this->getItemHtml($_item) ?>
    </tbody>
    <?php endforeach; ?>

</table>
<?php endif; ?>
