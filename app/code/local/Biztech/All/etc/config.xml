<config>
    <modules>
        <Biztech_All>
            <version>0.1.0</version>
        </Biztech_All>
    </modules>
    <frontend>
        <routers>
            <all>
                <use>standard</use>
                <args>
                    <module>Biztech_All</module>
                    <frontName>all</frontName>
                </args>
            </all>
        </routers>
        <!--<layout>
            <updates>
                <all>
                    <file>all.xml</file>
                </all>
            </updates>
        </layout>-->
    </frontend>
    <admin>
        <routers>
			<all>
				<use>admin</use>
				<args>
					<module>Biztech_All</module>
					<frontName>all</frontName>
				</args>
			</all>
        </routers>
    </admin>
    <adminhtml>
		<!--<menu>
			<all module="all">
				<title>All</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="all">
						<title>Manage Items</title>
